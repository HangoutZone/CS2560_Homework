#include <stdio.h>

void main ()
{
	for(int i = 0; i < 10; i++)
	{
			switch(i)
			{
				case 0 :
					printf("*\n");
					break;
				case 1 :
					printf("**\n");
					break;
				case 2 :
					printf("***\n");
					break;
				case 3 :
					printf("****\n");
					break;
				case 4 :
					printf("*****\n");
					break;
				case 5 :
					printf("******\n");
					break;
				case 6 :
					printf("*******\n");
					break;
				case 7 :
					printf("********\n");
					break;
				case 8 :
					printf("*********\n");
					break;
				case 9 :
					printf("**********\n");
					break;
			}

		}
	}

	for(int i = 0; i < 10; i++)
	{
			switch(i)
			{
				case 0 :
					printf("**********\n");
					break;
				case 1 :
					printf("*********\n");
					break;
				case 2 :
					printf("********\n");
					break;
				case 3 :
					printf("*******\n");
					break;
				case 4 :
					printf("******\n");
					break;
				case 5 :
					printf("*****\n");
					break;
				case 6 :
					printf("****\n");
					break;
				case 7 :
					printf("***\n");
					break;
				case 8 :
					printf("**\n");
					break;
				case 9 :
					printf("*\n");
					break;
			}
	}
}
