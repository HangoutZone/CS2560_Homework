#include <stdio.h>

void main ()
{
	float joe = 1000;

	float joeShare = 45.50;

	float stockbrokerPercent = 2 * 0.01;

	float joeSold = 1000;

	float joeSoldShare = 56.90;

	float joePaid = joe * joeShare;

	float brokerPay = stockbrokerPercent * joePaid;

	float joeSoldAmount = joeSold * joeSoldShare;

	float brokerSoldPay = stockbrokerPercent * joeSoldAmount;

	float joeAmount = joeSoldAmount - joePaid - brokerPay - brokerSoldPay;

	printf("$ %f", joeAmount);
}
