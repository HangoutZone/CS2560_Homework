#include <stdio.h>
#include <stdlib.h>

void main ()
{
	float charge = 88.67;

	float tax = 6.75 * 0.01;

	float tipPercent = 20 * 0.01;

	float taxAmount = tax * charge;

	float tipAmount = (charge + taxAmount) * tipPercent;

	float totalBill = charge + taxAmount + tipAmount;

	printf("prints  the meal cost, tax amount, tip amount, and total bill. Respectivly\n");
	printf("$%f\n", charge);
	printf("$%f\n", taxAmount);
	printf("$%f\n", tipAmount);
	printf("$%f\n", totalBill);

}
